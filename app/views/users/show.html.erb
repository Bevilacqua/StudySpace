<div class="container">
	<div class="page-header">
		<div class="text-center logo"><img style="width: 342px; height: 94px;" src="/assets/study_space_title_logo.png" alt="" /></div>
		<br/><br/>
		<div class="text-center welcome">
			<p class="welcome">Hello, <%= User.find(cookies[:u_id]).uname%>!</p>
		</div>
	</div>
</div>
<p>&nbsp;</p>
<div class="well well-sm">
	<div class="row header">
		<div class="col-md-3">&nbsp;</div>
		<div class="col-md-3">
			<div class="text-center">
				<div class="visited">
					<h3>Your Visited Spaces</h3>
				</div>
			</div>
		</div>
		<div class="col-md-3 text-center other">
			<h3>Other Popular Spaces</h3>
		</div>
	</div>
</div>

<div class="row spaces_panel">
	<div class="col-md-3">
		<div class="text-center">
			<%= @local.each do |check| %>
			<div class="panel panel-default">
				<div class="panel-heading panel1">
					<h3 class="panel-title"><%= check.spot.name %></h3>
				</div>
				<div class="panel-body body1"><%= check.spot.description %></div>
				<div class="btn-group learn_more"><button class="btn btn-default" type="button">Learn more</button></div>
			</div>
			<% end %>

			
		</div>
	</div>

	<div class="col-md-3">
		<div class="text-center">
			<%= @global.each do |check| %>
			<div class="panel panel-default">
				<div class="panel-heading panel1">
					<h3 class="panel-title"><%= check.spot.name %></h3>
				</div>
				<div class="panel-body body1"><%= check.spot.description %></div>
				<div class="btn-group learn_more"><button class="btn btn-default" type="button">Learn more</button></div>
			</div>
			<% end %>

		</div>
	</div>

</div>

